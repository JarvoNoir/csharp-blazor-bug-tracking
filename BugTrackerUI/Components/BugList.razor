<h3>BugList</h3>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Bugs)
        {
            <tr>
                <td>@bug.Id</td>
                <td>@bug.Title</td>
                <td>@bug.Description</td>
                <td>@bug.Priority</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Inject]
    public IBugService bugService { get; set; }

    public List<Bug> Bugs = new List<Bug>();

    protected override void OnInitialized()
    {
        Bugs = bugService.GetBugs().OrderBy(x => x.Priority).ToList();
    }
}
